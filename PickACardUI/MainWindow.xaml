<Window x:Class="PickACardUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PickACardUI"
        mc:Ignorable="d"
        Title="Card Picker" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <!--Funciona como um container para organizar outros elementos visuais em uma grade com linhas e colunas.-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <!--Etiqueta.-->
            <Label Content="How many cards should i pick?" HorizontalAlignment="Center" Margin="20" VerticalAlignment="Center"/>
            <!--Slider para escolher quantas cartas você quer..-->
        <Slider VerticalAlignment="Center" Margin="20"  Width="120" Maximum="15"  Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>
        </StackPanel>
        <ListBox Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="20,92,20,165" RenderTransformOrigin="0.445,0.377" Grid.RowSpan="2" SelectionChanged="ListBox_SelectionChanged"/>
        <Button Content="Pick Some Cards" HorizontalAlignment="Left" Margin="159,80,0,0" Grid.Row="1" VerticalAlignment="Top"/>

    </Grid>
</Window>
